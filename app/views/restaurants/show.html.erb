<div class="container">
  <h1><%= @restaurant.name %></h1>

  <br>
  <h3>Description & contact info</h3>
    <div class="m-2 p-2">
      <p>Category: <%= @restaurant.category %></p>
      <p>Located at: <%= @restaurant.address %></p>
      <p>Phone number: <%=  @restaurant.phone_number%></p>
  </div>
  <br>

  <h3>Reviews</h3>
  <% @restaurant.reviews.each do |review| %>
    <div class="m-2 p-2 border">
      <p>Comment: <%= review.content %></p>
      <p>Rating: <%= review.rating %></p>
      <p>Created on <%= review.updated_at %></p>
    </div>
  <% end %>

  <%= link_to "Home", restaurants_path %>
  <%= link_to "Add review", new_restaurant_review_path(@restaurant) %>

</div>
