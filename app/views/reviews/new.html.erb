<h1>Please submit your review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, as: :select, collection: [0, 1, 2, 3, 4, 5], prompt: "Please select your rating from 0 (terrible) to 5 (superdupergreat)", label: "Your rating" %>
  <%= f.input :content, label: "Your feedback" %>
  <%= f.submit "Submit your review" %>
<% end %>
